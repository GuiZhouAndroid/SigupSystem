<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/viewBackground"
    android:layout_height="match_parent"
    tools:context=".activity.MineActivity">
    <include layout="@layout/custom_coordinator"/>
    <!-- android:scrollbars="none"去除滚动条-->
    <ScrollView
        android:layout_below="@id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/rl_userImage"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:background="@color/viewBackground"
                        android:clickable="true"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/user_image"
                            android:textColor="@color/transparent_75"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/rv_userImage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray">
                    </View>

                    <RelativeLayout
                        android:id="@+id/rl_userSex"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:background="@color/viewBackground"
                        android:clickable="true"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/user_sex"
                            android:textColor="@color/transparent_75"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_userSex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="未填写"
                            android:textColor="@color/black80"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray">
                    </View>
                    <RelativeLayout
                        android:id="@+id/rl_userPhone"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:background="@color/viewBackground"
                        android:clickable="true"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/pleaseInputPhone"
                            android:textColor="@color/transparent_75"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_userPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="未填写"
                            android:textColor="@color/black80"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray">
                    </View>
                    <RelativeLayout
                        android:id="@+id/rl_userSignature"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:background="@color/viewBackground"
                        android:clickable="true"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/user_signature"
                            android:textColor="@color/transparent_75"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_userSignature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="@string/signature"
                            android:textColor="@color/black80"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray">
                    </View>

                    <RelativeLayout
                        android:id="@+id/rl_userRegisterDate"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:background="@color/viewBackground"
                        android:clickable="true"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/user_register_date"
                            android:textColor="@color/transparent_75"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_userRegisterDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="2017-10-20 14:19"
                            android:textColor="@color/black80"
                            android:textSize="14sp" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray">
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/viewBackground"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">
                       <EditText
                           android:id="@+id/edit_old_pwd"
                           android:hint="输入旧密码"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/edit_new_pwd"
                            android:hint="输入新密码"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:background="@color/viewBackground"
                        android:clickable="true"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">
                        <Button
                            android:id="@+id/btn_update_pwd"
                            android:text="密码修改"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>