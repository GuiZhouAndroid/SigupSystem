<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="74dp">
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/status_gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.zhangsong.com.signup_system.base.Widget.StepView
                android:id="@+id/stepView"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2"/>
            <LinearLayout
                android:paddingBottom="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <Button
                    android:id="@+id/btn_sign_back"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/btn_login_bg"
                    android:gravity="center"
                    android:text="@string/signup_back"
                    android:textSize="@dimen/sp_17"
                    android:textColor="@color/White" />
                <Button
                    android:layout_marginStart="@dimen/dp_30"
                    android:id="@+id/btn_sign_next"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/btn_login_bg"
                    android:gravity="center"
                    android:text="@string/signup_next"
                    android:textSize="@dimen/sp_17"
                    android:textColor="@color/White" />
            </LinearLayout>
        </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_sign_info_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
    </LinearLayout>
</LinearLayout>