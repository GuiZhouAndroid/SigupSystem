<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White"
    android:padding="@dimen/dp_8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/bg_signup"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/tv_signup_title"
            android:textColor="@color/bg_status_bar"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/sign_rl_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/bg_signup"
        android:gravity="center_vertical">
        <ImageView
            android:layout_marginStart="@dimen/dp_2"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:src="@mipmap/signup_marking" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@null"
            android:gravity="center"
            android:text="@string/signup_name"
            android:textColor="@color/bg_status_bar"
            android:textSize="@dimen/sp_15" />
        <com.zhangsong.com.signup_system.view.PowerfulEditText
            android:id="@+id/sign_edit_name"
            android:hint="@string/signup_name_input_name"
            android:inputType="text"
            android:maxLength="10"
            android:textColor="@color/Red"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:borderStyle="rectangle"
            app:styleColor="#008B8B"
            android:layout_alignParentEnd="true"
            app:clearDrawable="@drawable/edit_clear_all"
            android:textColorHint="@color/Red"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>


